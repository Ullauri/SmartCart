<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.byrongmail.ullauri.smartcart.ChooseMode">

    <ImageButton
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@drawable/backarrow"
        android:layout_height="30dp"
        android:id="@+id/backArrow"
        android:layout_width="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/backArrow"
        android:textSize="22sp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10dp"
        android:id="@+id/storeName"
        android:text="@string/chooseStore2" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:text="@string/continueText" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backArrow"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/continueButton"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp">

        <RadioGroup
            android:id="@+id/modeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/defaultMode"
                android:textSize="24sp"
                android:id="@+id/defaultModeRadio"
                android:textStyle="normal|bold" />

            <TextView
                android:text="This is the defualt mode it still  has to be typed @android:string/httpErrorUnsupportedScheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/defaultModeText"
                android:layout_weight="1"
                android:paddingLeft="34dp"
                android:paddingRight="27dp"
                android:layout_marginTop="7dp"
                android:visibility="visible" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/budgetMode"
                android:textSize="24sp"
                android:id="@+id/budgetModeRadio"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="This is the defualt mode it still  has to be typed @android:string/httpErrorUnsupportedScheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/budgetModeText"
                android:layout_weight="1"
                android:paddingLeft="34dp"
                android:paddingRight="27dp"
                android:layout_marginTop="7dp"
                android:visibility="gone" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/budgetEditText"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="@string/budgetHint"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="34dp"
                android:visibility="gone" />


        </RadioGroup>
    </ScrollView>

</RelativeLayout>
